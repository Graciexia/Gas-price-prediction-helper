<div class="container city">
    <div class="row">
      <div class="col-md-6" style="font-size:20px;color:white;font-family:RobotoDraft,Roboto,Helvetica Neue,Helvetica,Arial,sans-serif">
        <span><%=icon('line-chart faa-float animated ')%>&nbsp;Gas Price Prediction : Buy It Today Or Tomorrow</span><br><br><br><br/>
        <span><%=icon('money faa-float animated ')%> Your Car's Mileage Cost</span><br><br><br><br/>
        <span><%=icon('area-chart faa-float animated ')%>Price Trends Graph</span>
      </div>
      <br />
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel panel-header text-center">
            <h2>Let's Get Started</h2>
              <p> It's free and always will be </p>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="field" >
              <%= f.label :name %><br />
              <%= f.text_field :name, autofocus: true %><br/><br/>
            </div>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true %><br/><br/>
            </div>

            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off" %><br/><br/>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off" %><br /><br/>
            </div>

            <div class="form-group" align="center">
            <%= f.label :city%><br />
            <%= f.select :city_id, city_dropdown, {selected: params[:city_id]}, {autofocus: true, class: "form-control", style: "width:50%"} %><br/>
            </div>


            <div class="actions">
              <%= f.submit "Sign up",class: "btn btn-danger", redirect: new_registration_path(resource_name) %>
            </div>
            <% end %>
            <% if user_signed_in? %>
              <li>
              <%= link_to('Log out', destroy_user_session_path, :method => :delete) %>
              </li>
            <% else %>
              <li>
              <%= link_to('Log in', new_user_session_path)  %>
              </li>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>










