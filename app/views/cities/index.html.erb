<div class="root">
  <div class="row ">
    <div class="col-md-12" >
      <h1></h1>
    </div>
    <br><br><br><br>
  </div>
  <div class="row city title bluepanel">
    <div class="col-md-12" >
      <div class="title">
        <h1>When Can You Buy The Cheapest Gas?</h1>
      </div>
      <div class="inside">
        <h3>Crunching The Real Data</h3>
        <h3>Making Gas Price Predictions For You!</h3>
        <br>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12" >
      <br><br><br><br><br>
    </div>
  </div>
  <% if ! user_is_logged_in? %>
    <div class="bluepanel">
      <div class="row title2">
        <div class="col-md-offset-4 col-md-4">
          <h2>Let's Get Started</h2>
          <h3>It's free and always will be!</h3><br>
        </div>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="row info">
          <%= devise_error_messages! %>
          <div class="col-md-offset-2 col-md-3 col-sm-offset-2 col-sm-3 col-xs-offset-1 col-xs-4 text-right">
            <span><%= f.label :name %>&nbsp;<%= f.text_field :name %></span>
          </div>
          <div class="col-md-3 col-sm-3 col-xs-4 text-right">
            <span><%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "off" %></span>
          </div>
        </div>
        <div class="row info">
          <div class="col-md-offset-2 col-md-3 col-sm-offset-2 col-sm-3 col-xs-offset-1 col-xs-4 text-right">
            <span><%= f.label :email %>&nbsp;<%= f.email_field :email %></span>
          </div>
          <div class="col-md-3 col-sm-3 col-xs-4 text-right">
            <span><%= f.label 'Confirm' %>&nbsp;<%= f.password_field :password_confirmation, autocomplete: "off" %></span>
          </div>
        <div class="row info">
          <div class="col-md-12 col-sm-12 col-xs-12">
            <br>
          </div>
        </div>
        <div class="row info">
          <div class="col-md-offset-4 col-md-4 col-sm-offset-4 col-sm-4 col-xs-offset-2 col-xs-8 text-center">
            <%= f.select :city_id, city_dropdown, {selected: params[:city_id]}, {class: "form-control"} %><br/>
          </div>
        </div>
        <div class="row title2">
          <div class="col-md-offset-4 col-md-4">
            <div class="actions">
              <%= f.submit "Sign up",class: "btn btn-default", redirect: new_registration_path(resource_name) %>
            </div>
          </div>
        </div>
      <% end %>
      <br><br>
    </div>
  <% end %>
</div>
